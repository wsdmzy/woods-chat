{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@renderer/*": ["src/renderer/*"],
      "@main/*": ["src/main/*"],
    },
  },
  "lib": [
    "dom",
    "esnext"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "src/main",
    "src/renderer"
  ]
}